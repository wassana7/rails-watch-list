<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), <%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>">
  <div class="container">
    <h1><%= @list.name %></h1>
    <%= link_to "+Add a movie", new_list_bookmark_path(@list), class: 'btn' %>
  </div>
</div>
<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
    <div class="card" style="width: 18rem;">
      <div class="raw">
        <img class="card-img-top col-9" src="..." alt="Card image cap">
        <%= link_to raw('<i class="far fa-times-circle"></i>'), bookmark_path(bookmark), method: :delete,  class:"col-3" %>
      </div>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p> Comment: <%= bookmark.comment %> </p>
          </div>
    </div>
  <% end %>
  <br> <%= link_to 'Back to list', lists_path, class: 'btn-back' %>
</div>
